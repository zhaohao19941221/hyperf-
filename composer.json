{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-openssl": "*",
        "hyperf/cache": "2.2.*",
        "hyperf/command": "2.2.*",
        "hyperf/config": "2.2.*",
        "hyperf/constants": "2.2.*",
        "hyperf/db-connection": "2.2.*",
        "hyperf/framework": "2.2.*",
        "hyperf/guzzle": "2.2.*",
        "hyperf/http-server": "2.2.*",
        "hyperf/logger": "2.2.*",
        "hyperf/memory": "2.2.*",
        "hyperf/process": "2.2.*",
        "hyperf/swagger": "2.2.*",
        "hyperf/task": "^2.2",
        "hyperf/validation": "^2.2"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/devtool": "2.2.*",
        "hyperf/testing": "2.2.*"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "": "src/",
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "secure-http": false
    },
    "extra": {

    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 4028M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php ./bin/hyperf.php start"
        ],
        "check": "composer cs-fix && composer analyse",
        "frontdoc": "sh ./console/api-frontdoc",
        "model-refresh": "php bin/hyperf.php model:refresh && composer cs-fix"
    }
}
